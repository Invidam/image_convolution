<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <!-- 
  MSIProductVersion is defined in ImageConvolution.wixproj as 0.0.1 for local desktop builds.  
  You should pass in the MSBuild Property 'MSIProductVersion' to override it during an automated build.
  See http://msdn.microsoft.com/en-us/library/windows/desktop/aa370859%28v=vs.85%29.aspx for information on allowable values.
  
  The Product@Id attribute (ProductCode Property) will be a random GUID for each build.  This is to support "Major Upgrades" where each install 
  is a seamless uninstall/reinstall.
  -->
  <Package Name="ImageConvolution" Language="1033" Version="$(var.MSIProductVersion)" Manufacturer="LazoYoung" UpgradeCode="ecd92d10-ee4f-4cca-ae0d-bb02e8b000c6" Compressed="yes" InstallerVersion="310" ProductCode="980fb8e3-e82a-40db-b1d7-2e61a79626cd" Scope="perUser" ShortNames="no">
    <SummaryInformation />
    <MediaTemplate EmbedCab="yes" />
    <!-- Major Upgrade Rule to disallow downgrades -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <!-- Uncomment below two lines to require .NET 4.8 or Later to install -->
    <!-- <PropertyRef Id="WIX_IS_NETFRAMEWORK_48_OR_LATER_INSTALLED" /> -->
    <!-- <Launch Condition="Installed OR WIX_IS_NETFRAMEWORK_48_OR_LATER_INSTALLED" Message="[ProductName] requires .NET Framework 4.8 or later." /> -->
    <Icon Id="Icon.ico" SourceFile="Resources\Icon.ico" />
    <Property Id="ARPPRODUCTICON" Value="Icon.ico"></Property>
    <Property Id="DISABLEADVTSHORTCUTS" Value="1"></Property>
    <Property Id="ALLUSERS" Secure="yes" Value="2" />
    <Property Id="MSIINSTALLPERUSER" Secure="yes" Value="1" />
    <UIRef Id="UI" />
    <StandardDirectory Id="ProgramFiles6432Folder">
      <Directory Id="INSTALLLOCATION" Name="ImageConvolution" />
    </StandardDirectory>
    <Feature Id="ImageConvolution" Title="ImageConvolution" Description="Installs all the files needed for ImageConvolution" Level="1" AllowAdvertise="no" ConfigurableDirectory="INSTALLLOCATION">
      <ComponentGroupRef Id="ImageConvolutionFiles" />
    </Feature>
  </Package>
</Wix>